{
  "name": "WIYS Development Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },
  "postCreateCommand": "npm install -g @google/clasp && echo 'âœ… clasp installed. Run: clasp login' ",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
      }
    }
  },
  "forwardPorts": [],
  "remoteUser": "node"
}
